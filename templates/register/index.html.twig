{#
  Template d'inscription utilisateur
  - Hérite du layout principal base.html.twig
  - Affiche le formulaire d'inscription
#}
{% extends 'base.html.twig' %}

{# Bloc du titre de la page (affiché dans <title>) #}
{% block title %}
  Inscription
{% endblock %}

{# Bloc principal du contenu de la page #}
{% block body %}
  <div class="register-form-wrapper">
    {# Carte centrale contenant le formulaire #}
    <div class="register-card">
      {# Titre principal de la page #}
      <h1 class="register-title">Créer un compte</h1>
      {# Démarre le formulaire Symfony (gère CSRF, action, etc.) #}
      {{ form_start(registerForm) }}
        {# Affiche tous les champs du formulaire automatiquement #}
        {{ form_widget(registerForm) }}
        {# Bouton de soumission du formulaire #}
        <button type="submit" class="register-btn">S’inscrire</button>
      {{ form_end(registerForm) }}
    </div>
  </div>
{% endblock %}
