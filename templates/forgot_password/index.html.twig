{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <h1 class="h4 mb-4">Mot de passe oublié</h1>
            <p class="text-muted">Entrez votre adresse email pour recevoir un lien de réinitialisation.</p>
            {% if success is defined and success %}
              <div class="alert alert-success text-center mb-3">Un email de réinitialisation a été envoyé si l'adresse existe.</div>
            {% else %}
              <form method="post" action="">
                <div class="mb-3">
                  <label for="inputEmail" class="form-label">Email</label>
                  <input type="email" class="form-control" id="inputEmail" name="email" required autofocus>
                </div>
                <button type="submit" class="btn btn-primary w-100">Envoyer le lien</button>
              </form>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
